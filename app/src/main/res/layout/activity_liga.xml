<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LigaActivity">

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo_mobile"/>

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="93dp"
        android:layout_height="66dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/homeImageViewLiga"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ligaTextView"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@null"
        android:gravity="center_vertical|center_horizontal"
        android:hint="SELECCIONA TU LIGA"
        android:inputType="text"
        android:textColorHint="@android:color/black"
        app:layout_constraintEnd_toEndOf="@id/backgroundImageView"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@id/backgroundImageView"
        app:layout_constraintTop_toBottomOf="@id/iconImageView" />

    <CheckBox
        android:id="@+id/premierLeaguecheckBox"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:text="Premier League"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ligaTextView" />

    <CheckBox
        android:id="@+id/bundesligacheckBox"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Bundesliga"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/premierLeaguecheckBox" />

    <CheckBox
        android:id="@+id/serieAcheckBox"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Serie A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bundesligacheckBox" />

    <CheckBox
        android:id="@+id/laLigacheckBox"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="La Liga"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/serieAcheckBox" />

</androidx.constraintlayout.widget.ConstraintLayout>